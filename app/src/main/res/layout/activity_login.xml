<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_login_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb_ch_simple"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/sel_lang_checked"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:minHeight="25dp"
                android:text="中文"
                android:textColor="#ababab" />

            <RadioButton
                android:id="@+id/rb_ch_tradition"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/sel_lang_checked"
                android:button="@null"
                android:gravity="center"
                android:minHeight="25dp"
                android:text="繁體"
                android:textColor="#ababab" />

            <RadioButton
                android:id="@+id/rb_en"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/sel_lang_checked"
                android:button="@null"
                android:gravity="center"
                android:minHeight="25dp"
                android:text="English"
                android:textColor="#ababab" />
        </RadioGroup>

        <com.jx.sleep_dg.ui.RoundedImageView.RoundedImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"
            app:riv_corner_radius="60dp" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_user_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@mipmap/ic_phonenumber"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="@string/hint_account_name"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLength="11"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:theme="@style/EditText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_password_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@mipmap/ic_password"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="@string/hint_pwd"
                android:inputType="textPassword"
                android:maxLength="20"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:theme="@style/EditText" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/sel_login_btn"
        android:gravity="center"
        android:text="@string/login"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textSize_18"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_forget_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/pwd_forget"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize_14"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>

