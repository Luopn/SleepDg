<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/fl_chuang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    android:background="@mipmap/pic_bed" />

                <LinearLayout
                    android:id="@+id/ll_chongqi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="24dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/up_left" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:background="@mipmap/uo_right" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@mipmap/up_left" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:background="@mipmap/uo_right" />
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/fl_chuang"
                android:layout_margin="10dp"
                android:layout_toRightOf="@id/fl_chuang"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <com.jx.sleep_dg.view.BorderButton
                    android:id="@+id/tv_lcur_hardless"
                    android:layout_width="70dp"
                    android:layout_height="24dp"
                    android:text="56"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/textSize_12"
                    app:lb_corner="12dp"
                    app:lt_corner="12dp"
                    app:normal_color="@android:color/transparent"
                    app:stroke_color="@color/textTitleColor"
                    app:stroke_width="1dp" />

                <com.jx.sleep_dg.view.BorderButton
                    android:layout_width="80dp"
                    android:layout_height="24dp"
                    android:text="@string/hardness_cur_title"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/textSize_12"
                    app:corner="0dp"
                    app:normal_color="@color/textTitleColor"
                    app:stroke_color="@color/textTitleColor"
                    app:stroke_width="1dp" />

                <com.jx.sleep_dg.view.BorderButton
                    android:id="@+id/tv_rcur_hardness"
                    android:layout_width="70dp"
                    android:layout_height="24dp"
                    android:text="80"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/textSize_12"
                    app:normal_color="@android:color/transparent"
                    app:rb_corner="12dp"
                    app:rt_corner="12dp"
                    app:stroke_color="@color/textTitleColor"
                    app:stroke_width="1dp" />
            </LinearLayout>

            <ToggleButton
                android:id="@+id/togglebutton"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:background="@drawable/toggle_drawable_selector"
                android:textOff="@null"
                android:visibility="gone"
                android:textOn="@null" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!--硬度控制部分-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <RelativeLayout
                    android:layout_width="35dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_jia"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerInside"
                        android:src="@mipmap/ic_add" />

                    <ImageView
                        android:id="@+id/iv_jian"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerInside"
                        android:src="@mipmap/ic_reduce" />

                </RelativeLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal">

                    <com.jx.sleep_dg.view.bar.MySeekBar
                        android:id="@+id/left_seekbar"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        app:maxProgress="20"
                        app:progress="0"
                        app:minProgress="1"
                        app:radius="90dp" />

                    <TextView
                        android:id="@+id/tv_gear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="35dp"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/textSize_15"
                        android:visibility="gone" />
                </FrameLayout>

                <com.jx.sleep_dg.view.bar.MySeekBar
                    android:id="@+id/right_seekbar"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    app:maxProgress="20"
                    app:minProgress="1"
                    app:radius="90dp"
                    app:progress="0"
                    app:seek_left="false" />

                <RelativeLayout
                    android:layout_width="35dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_jia_r"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerInside"
                        android:src="@mipmap/ic_add" />

                    <ImageView
                        android:id="@+id/iv_jian_r"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerInside"
                        android:src="@mipmap/ic_reduce" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!--Toolbar-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/hardness"
            android:textColor="@color/textTitleColor"
            android:textSize="@dimen/textSize_18" />
    </FrameLayout>
</FrameLayout>