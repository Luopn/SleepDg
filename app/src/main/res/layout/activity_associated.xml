<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dt="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/tablay"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        dt:tl_iconVisible="false"
        dt:tl_indicator_color="#3a397c"
        dt:tl_indicator_width="30dp"
        dt:tl_textBold="SELECT"
        dt:tl_textSelectColor="#3a397c"
        dt:tl_textUnselectColor="@android:color/white"
        dt:tl_textsize="14sp" />

    <View
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_view"
        android:background="@android:color/white" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>